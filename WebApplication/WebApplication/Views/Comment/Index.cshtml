@model IEnumerable<WebApplication.Models.Comment>

@{
    ViewBag.Title = "Dashboard Comments";
}

<h2>Dashboard - Comments</h2>

@if (TempData.ContainsKey("message")) {
    if (TempData.ContainsKey("warning")) {
        TempData.Remove("warning");
        <div class="alert alert-warning  alert-dismissible" role="alert">
            @TempData["message"]
        </div>
    } else {
        <div class="alert alert-success alert-dismissible" role="alert">
            @TempData["message"]
        </div>
    }
}

<p>
    @Html.ActionLink("Add Comment", "New")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Discussion.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Discussion.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
